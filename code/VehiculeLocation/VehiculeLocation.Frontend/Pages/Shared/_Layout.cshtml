<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VehiculeLocation.Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VehiculeLocation.Frontend.styles.css" asp-append-version="true" />
</head>
@{
    var hasToken = Context.Request.Cookies.ContainsKey("token");
    var username = hasToken ? Context.Request.Cookies["username"] : null;
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 app-navbar">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index"><img src="resources/logo.png" alt="logo" style="max-height: 45px"> VehicleLocation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/List">Vehicles list</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Add">Add a vehicle</a>
                        </li>
                        @if (hasToken)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Reservations">My reservations</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/MyVehicles">My vehicles</a>
                            </li>
                        }
                    </ul>


                    <div class="auth-action ms-sm-3">
                        @if (!hasToken)
                        {
                            <!-- Link to the auth page while staying within the shared layout -->
                            <a asp-area="" asp-page="/Auth" class="auth-link">
                                <span class="auth-icon" aria-hidden="true">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <circle cx="12" cy="8" r="4" />
                                        <path d="M4.5 20a7.5 7.5 0 0 1 15 0" />
                                    </svg>
                                </span>
                                <span class="auth-text">
                                    <span class="auth-primary">Connexion</span>
                                    <span class="auth-divider" aria-hidden="true">|</span>
                                    <span class="auth-secondary">Inscription</span>
                                </span>
                            </a>
                        }
                        else
                        {
                            <!-- Display username and logout button -->
                            <span class="text-white me-2">@username</span>
                            <form method="post" asp-page="/Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-light">Logout</button>
                            </form>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-white">
            &copy; 2025 - VehiculeLocation.Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
